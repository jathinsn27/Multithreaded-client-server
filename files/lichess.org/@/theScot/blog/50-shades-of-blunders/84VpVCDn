[WhiteElo &quot;2770&quot;]
[BlackElo &quot;2862&quot;]
[Variant &quot;Standard&quot;]
[ECO &quot;C54&quot;]
[Opening &quot;Italian Game: Classical Variation, Giuoco Pianissimo, with h6&quot;]
[Annotator &quot;https://lichess.org/@/theScot&quot;]
[StudyName &quot;lesson with advanced 3 week 11 and 12&quot;]
[ChapterName &quot;Wesley So - Magnus Carlsen&quot;]
